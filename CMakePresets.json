{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/debug/linux",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_COMPILER": "clang++-18",
                "CMAKE_C_COMPILER": "clang-18",
                "CMAKE_CXX_FLAGS": "-stdlib=libc++"
            }
        },
        {
            "name": "linux-release",
            "inherits": "linux",
            "binaryDir": "${sourceDir}/build/release/linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "VS",
            "inherits": "default",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/debug/VS",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/MP /EHsc"
            }
        },
        {
            "name": "VS-release",
            "inherits": "VS",
            "binaryDir": "${sourceDir}/build/release/VS",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_FLAGS": "/MP /EHsc"
            }
        },
        {
            "name": "gcc",
            "displayName": "GCC 13.2.0 x86_64-linux-gnu",
            "description": "Using compilers: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "gcc",
            "description": "",
            "displayName": "",
            "configurePreset": "gcc"
        }
    ]
}